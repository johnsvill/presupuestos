@model TipoCuenta

@{
    ViewData["Title"] = "Editar Tipo de cuenta";
}

<h5>
    Editar tipo cuenta: <strong>@Model.Nombre</strong>
</h5>
<div asp-validation-summary="ModelOnly" class="text-danger">
</div>
<form asp-controller="TiposCuentas" asp-action="EditarTipoCuenta" method="post">
    <input type="hidden" asp-for="TipoCuentaId"/>
    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input type="text" asp-for="Nombre" class="form-control" />  
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Enviar</button>
    <a class="btn btn-secondary" asp-action="ListaTiposCuentas">Cancelar</a>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
